<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wanderlust</title>
</head>

<body>
    <%- layout("/layouts/boilerplate") %>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%= listing.title %>
                </h3>
            </div>
            <div class="card col-6 offset-3 show-card listing-card">
                <div class="card-body">
                    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image" />
                    <p class="card-text">
                        <i> Owned By- <%= listing.owner.username %> </i>
                    </p>
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <p class="card-text">
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>
                    </p>
                    <p class="card-text">
                        <%= listing.location %>
                    </p>
                    <p class="card-text">
                        <%= listing.country %>
                    </p>
                </div>
            </div>
            <br />
            <% if(currentUser && listing.owner.equals(currentUser._id)) {%>
                <div class="btns">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit
                    </a>

                    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                        <button class="btn btn-dark offset-6">Delete</button>
                    </form>
                </div>
                <% } %>
                    <% if(currentUser){ %>
                        <div class="col-8 offset-3 mb-3">
                            <hr />
                            <h4>Leave a Review</h4>
                            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate
                                class="needs-validation">
                                <div class="mb-3 mt-3">
                                    <label for="rating" class="form-label">Rating
                                        <fieldset class="starability-slot">
                                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                                value="1" checked aria-label="No rating." />
                                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                            <label for="first-rate1" title="Terrible">1 star</label>
                                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                            <label for="first-rate2" title="Not good">2 stars</label>
                                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                            <label for="first-rate3" title="Average">3 stars</label>
                                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                            <label for="first-rate4" title="Very good">4 stars</label>
                                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                            <label for="first-rate5" title="Amazing">5 stars</label>
                                        </fieldset>
                                    </label>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label for="comment" class="form-label">Comments
                                        <textarea name="review[comment]" id="comment" cols="30" rows="5"
                                            class="form-control" required></textarea>
                                    </label>
                                    <div class="invalid-feedback">Please enter the Comment</div>
                                </div>
                                <button class="btn btn-outline-dark">Submit</button>
                            </form>
                            <hr />
                        </div>
                        <% } %>
                            <div class="col-8 offset-3">
                                <h4>All Reviews</h4>
                                <% for (review of listing.reviews){ %>
                                    <div class="row">
                                        <div class="card col-5 mb-3 mt-3 ms-3">
                                            <div class="card-body">
                                                <h5 class="card-title">@<%= review.author.username %>
                                                </h5>
                                                <p class="card-text">
                                                    <%= review.comment %> Stars
                                                </p>
                                                <p class="starability-result card-text"
                                                    data-rating="<%= review.rating %>"></p>
                                                <form
                                                    action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
                                                    method="POST">
                                                    <button class="btn btn-outline-dark">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
        </div>
</body>

</html>